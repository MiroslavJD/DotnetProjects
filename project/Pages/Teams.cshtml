@page "/Teams"
@using project.Models
@model project.Pages.TeamsModel

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: black;
            color: white;
        }
        .picture {
        text-align: right;
        margin-top: 50px;
        }
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #f5f5f5; /* Replace with your desired background color */
            padding: -4px;
            text-align: center;
            background-color: black;
            color: white;
        }
    </style>
</head>

<body>
<div class="picture">
    <img src="https://i.ibb.co/vDx0Xv8/images.png" alt="images" width="70" height="70">
    </div>   
    <h1>Teams</h1>
<table id="teamsTable">
    <thead>
        <tr>
            <th>Team Name</th>
        </tr>
    </thead>
    <tbody>
@foreach (var team in Model.Teams)
        {
            <tr>
                <td>@team.Name</td>
            </tr>
        }
    </tbody>
</table>
</body>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#teamsTable').DataTable();
        });
    </script>
}